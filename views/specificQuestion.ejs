<%- include ('partials/header.ejs') %>

<div class="form-group" style="align-items: flex-end; width: 15%; margin-left: 82%;">
    <button class="btn btn-lg btn-block btn-primary" style="float: inline-end;">
       <a href="../question/<%=question._id%>/answer" style="color: black">Add Answer</a>
    </button>
</div>
<div class="container">
    <div style="width: 60%; margin: 25px auto">
        <h2 style="padding-top: 10px; padding-left: 60px;"><%=question.topic%></h2>
        <h4 style="padding-top: 10px; padding-left: 60px;"> <%=question.text%></h4>
        <h6 style="text-align: end; margin-right: 30px;"><%=question.createdAt%></h6>
        <hr style="border-top: 1px solid; margin-left: 30.0px; margin-right: 30.0px; opacity: 0.6;"/>
        <br><br><br>
        <div style = "height: 100px; width: 100; border: 2px solid; border-radius: 10px;" >
        </div>
        <br><br>
            <% question.answers.forEach(function(answer){%>
                <div class = "row", style="border: 1px solid black; border-radius: 10px; margin: 1.5em auto;">
                    <div class="col"style="margin: 1.5em auto">
                        <p>Answer: <%=answer.text%></p>
                        <p>votes: <%=answer.votes%></p>
                        <p>Answered By: <%=answer.answeredBy.displayName%></p>
                        <p>Email: <%=answer.answeredBy.email%></p>
                        <form class="vote-up" data-id="<%=answer._id%>">
                            <button type="submit">Vote Up</button>
                          </form>
                          <form class="vote-down" data-id="<%=answer._id%>">
                            <button type="submit">Vote Down</button>
                        </form>
                        <form method="POST" action="/question/<%=question._id%>/<%=answer._id%>/correct">
                            <button class="btn btn-lg btn-default btn-block btn-primary">Correct</button>
                        </form>
                    </div>
                </div>
            <%})%>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
<script rel="script" src="/js/answers.js"></script>
<%- include ('partials/footer.ejs') %>

