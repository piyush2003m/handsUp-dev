<%- include('partials/header.ejs') %>
<!--TinyMCE Rich Text Editor-->
<script src="https://cdn.tiny.cloud/1/oydq6el8ltiiibygqjy5opku8v9x7xyv2t4evjywodimksys/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<!--TinyMCE Rich Text Editor-->
<div class="container">
  <h1 class="my-3" style="text-align: center;">Add an Answer</h1>
  <h2 class="my-3" style="text-align: center;color:darkslategray"><%= question.text %></h1>
  <div class="row">
    <div style="width: 60%; margin: 25px auto;">
      <form method="POST" action="/question/<%=question._id%>/answer">
        <div class="form-group">
          <label for="topic">Topic</label>
          <input class="form-control" name="topic" id="topic" value = "<%= question.topic %>" disabled>
        </div>
        <div class="form-group">
          <label for="subject">Subject</label>
          <select class="form-control" name="subject" id = "subject" value = "<%= question.subject %>" disabled>
            <option value="Physics">Physics</option>
            <option value="Biology">Biology</option>
            <option value="Maths">Maths</option>
            <option value="Chemistry">Chemistry</option>
            <option value="English">English</option>
          </select>
        </div>
        <div class="form-group">
          <label for="text">Answer:</label>
          <textarea
            id = "text"
            name = "text"
            style = "width:100%; height: auto;"
          ></textarea>
        </div>
        <div class="form-group">
          <label for="img">Select image:</label>
          <input type="file" id="img" name="img" accept="image/*" />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">
            Submit!
          </button>
          <script>
            tinymce.init({
              selector: '#text'
            });
          </script>
        </div>
      </form>
      <a href="/question/<%=question._id%>">Go Back</a>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>