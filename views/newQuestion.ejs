<%- include('partials/header.ejs') %>
<script src="https://cdn.tiny.cloud/1/oydq6el8ltiiibygqjy5opku8v9x7xyv2t4evjywodimksys/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<div class="container">
	<h1 class="my-3" style="text-align: center;">Add a Question</h1>
	<div class="row">
		<div style="width: 60%; margin: 25px auto;">
			<form method="POST" action="/question">
				<div class="form-group">
					<label for="topic">Topic</label>
					<input class="form-control" name="topic" id="topic" />
				</div>
				<div class="form-group">
					<label for="subject">Subject</label>
					<select class="form-control" name="subject" id="subject">
						<option value="Physics">Physics</option>
						<option value="Biology">Biology</option>
						<option value="Maths">Maths</option>
						<option value="Chemistry">Chemistry</option>
						<option value="English">English</option>
					</select>
				</div>
				<div class="form-group">
					<label for="tags">Tags</label>
					<input class="form-control" name="tags" id="tags" placeholder="separate each tag with a comma" />
				</div>
				<div class="form-group">
					<label for="text">Question</label>
					<textarea
					id = "text"
					name = "text"
					style = "width:100%; height: auto;"
				  ></textarea>
				</div>
				<div class="form-group">
					<label for="img">Select image:</label>
					<input type="file" id="img" name="img" accept="image/*" />
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">
						Submit!
					</button>
					<script>
						tinymce.init({
						  selector: '#text'
						});
					</script>
				</div>
			</form>
			<a href="/question">Go Back</a>
		</div>
	</div>
</div>
<%- include('partials/footer.ejs') %>